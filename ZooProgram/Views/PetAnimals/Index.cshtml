@model IEnumerable<ZooProgram.Models.AnimalsViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Index</h2>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Pet Name</th>
            <th>No Of Animals</th>
            <th>Pet Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AnimalName
                </td>
                <td>
                    @item.Count
                </td>
                <td>
                    @item.Gender
                </td>
            </tr>
        }
    </tbody>
</table>
